{
  "name": "TFSChat",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Add-ons to the TFS Team Rooms",
  "homepage_url": "https://github.com/nuts4dotnet/TFSChatExtensions",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "content_scripts":[
   {
      "matches":["https://*.visualstudio.com/_rooms*"],
      "js":["src/bg/background.js"]
   }
  ],
  "web_accessible_resources": ["/src/bg/TeamRoomScript.tamper.js"],
  "options_page": "src/options_custom/index.html",
  "permissions": [
    "contentSettings",
    "tts",
    "ttsEngine",
    "notifications",
    "https://*.visualstudio.com/_rooms*"
  ]
}